<% flash.each do |message_type, message| %>
  <p id="success"><%= message %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <form>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>

      <td><%= link_to "Show" ,book_path(book.id) %></td>
      <td><%= link_to "Edit" ,edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy" ,book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %></form>
  </tbody>
</table>

<h2 class="new">New Book</h2>
<% if @book.errors.any? %>
<div id="error">
ã€€<h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_with model:@book do |f| %>
<% if @book.errors.any? %>
<div class="field_with_errors">
  <h4 class="field">Title</h4>
  <div class="field">
    <%= f.text_field :title %>
  </div>
</div>

<div class="field_with_errors">
  <h4 class="field">Body</h4>
  <div class="field">
    <%= f.text_area :body %>
  </div>
</div>
<% else %>

<div class="field_with_errors">
  <h4>Title</h4><br>
    <%= f.text_field :title %>
</div>

<div class="field_with_errors">
  <h4>Body</h4><br>
    <%= f.text_area :body %>
</div>
<% end %>

  <div class="btn"><%= f.submit 'Create Book' %></div>
<% end %>
